<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
               android:background="#FFFFFF"
               android:orientation="vertical"
               android:layout_width="fill_parent"
               android:layout_height="fill_parent"
               android:padding="10dp"
               android:id="@+id/context">

    <TextView android:id="@+id/textViewAzimut"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true"
              android:layout_marginLeft="32dp"
              android:layout_marginTop="27dp"
              android:hint="@string/azimut"/>
    <TextView android:id="@+id/textViewPitch"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/textViewAzimut"
              android:layout_below="@+id/textViewAzimut"
              android:layout_marginTop="21dp"
              android:hint="@string/pitch"/>
    <TextView android:id="@+id/textViewRoll"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/textViewPitch"
              android:layout_below="@+id/textViewPitch"
              android:layout_marginTop="21dp"
              android:hint="@string/roll"/>
    <ImageView
            android:id="@+id/flower"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
             />
    <TextView android:id="@+id/response"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/textViewPitch"
              android:layout_below="@+id/textViewPitch"
              android:layout_marginTop="21dp"/>
</LinearLayout>
